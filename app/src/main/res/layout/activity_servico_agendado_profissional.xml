<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServicoAgendadoProfissionalActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <ImageView
        android:id="@+id/iconeConfirmacao"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:layout_marginTop="81dp"
        android:layout_marginBottom="651dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_check_circle_24" />

    <TextView
        android:id="@+id/txtServicoAgendado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="679dp"
        android:text="Serviço agendado com sucesso!"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="221dp"
        android:layout_height="263dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="59dp"
        android:background="@drawable/borda_conteiner_constraint_layout"
        android:backgroundTint="#575757"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltarAoMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtServicoAgendado">

        <TextView
            android:id="@+id/txtTipoServico"
            android:layout_width="184dp"
            android:layout_height="42dp"
            android:text="Serviço: Limpeza padrão"
            android:textColor="#F2F2F2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPergunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            android:text="&quot;Quem irá me atender?&quot;"
            android:textColor="#F2F2F2"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtDetalhes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.564"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTipoServico" />

        <TextView
            android:id="@+id/txtDetalhes"
            android:layout_width="184dp"
            android:layout_height="89dp"
            android:layout_marginTop="20dp"
            android:justificationMode="inter_word"
            android:text=" Você será atendido por um Profissional Autônomo, devidamente credenciado na Casa em Ordem e bem avaliado por outros clientes."
            android:textAlignment="textStart"
            android:textColor="#F2F2F2"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtPergunta" />

        <TextView
            android:id="@+id/txtValorServico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="22dp"
            android:text="Valor total: R$ 130,00"
            android:textColor="#F2F2F2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDetalhes" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnVoltarAoMenu"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginBottom="292dp"
        android:backgroundTint="#F2B807"
        android:text="Voltar ao menu"
        android:textColor="#f2f2f2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>