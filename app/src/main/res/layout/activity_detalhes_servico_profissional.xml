<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalhesServicoProfissionalActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="277dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav" />


    <TextView
        android:id="@+id/txtDetalhesServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="800dp"
        android:fontFamily="@font/lato"
        android:text="Detalhes do serviço"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="413dp"
        android:layout_height="625dp"
        android:layout_marginTop="88dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#575757"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/serviceDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:padding="10dp"
                android:text="Gostaria de solicitar os serviços de um eletricista para instalar um ventilador de teto na minha casa. Já comprei o ventilador, e agora preciso de um profissional para fazer a instalação com segurança.\n\nPreciso que o serviço seja feito o quanto antes, mas podemos combinar um horário conforme a disponibilidade do profissional. Aguardo seu retorno para acertarmos os detalhes.\n\nObrigado!"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:layout_marginBottom="356dp"
            android:background="#D3D3D3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/lato"
            android:text="Tipo de residência"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="#575757"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/txtTipoResidencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:padding="16dp"
                android:text="Apartamento"
                android:textAlignment="inherit"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="400dp"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:layout_marginBottom="300dp"
            android:background="#D3D3D3" />


        <TextView
            android:id="@+id/txtPerfilCliente"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="@font/lato"
            android:text="Perfil do Cliente"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#575757"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/txtNomeCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:padding="16dp"
                android:text="Mateus Cainan"
                android:textAlignment="inherit"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtEnderecoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="67dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/lato"
                android:padding="16dp"
                android:text="Asa Sul, Brasilia"
                android:textAlignment="inherit"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/baseline_person_24" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="65dp"

                app:srcCompat="@drawable/icone_local" />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <Button
        android:id="@+id/btnAceitarServico"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#F2B807"
        android:onClick="redirectConfirmacaoPedido"
        android:text="Aceitar"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/btnRecusarServico"
        android:layout_width="114dp"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="116dp"
        android:backgroundTint="#000000"
        android:onClick="redirectPaginaInicialProfissional"
        android:text="Recusar"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>