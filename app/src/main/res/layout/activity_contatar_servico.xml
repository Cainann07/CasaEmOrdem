<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="812dp"
            tools:context=".ContratarServicoActivity">

            <include
                android:id="@+id/include"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/idTxt1_contrataServico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="127dp"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="128dp"
                android:text="Contratar Serviço"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/idTxt_escolherServico"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/idTxt_escolherServico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="136dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="137dp"
                android:layout_marginBottom="31dp"
                android:text="Escolha um serviço"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idTxt1_contrataServico" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="316dp"
                android:layout_height="83dp"
                android:layout_marginTop="15dp"
                app:layout_constraintBottom_toTopOf="@+id/id_tipoLar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.494"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idTxt_escolherServico">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/cor_dos_icones"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="85dp"
                        android:layout_height="66dp">

                        <ImageView
                            android:id="@+id/icone_limpeza"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="25dp"
                            app:layout_constraintBottom_toTopOf="@+id/textView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/baseline_cleaning_services_24" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:text="Limpeza"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icone_limpeza" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="85dp"
                    android:layout_height="66dp"

                    android:layout_margin="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/cor_dos_icones"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cardView2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="85dp"
                        android:layout_height="66dp">

                        <ImageView
                            android:id="@+id/icone_eletricista"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="25dp"
                            app:layout_constraintBottom_toTopOf="@+id/txtEletricista"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/icone_eletricista" />

                        <TextView
                            android:id="@+id/txtEletricista"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:text="Eletricista"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icone_eletricista" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/cor_dos_icones"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="85dp"
                        android:layout_height="66dp">

                        <ImageView
                            android:id="@+id/icone_encanador"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="25dp"
                            app:layout_constraintBottom_toTopOf="@+id/txtEncanador"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/icone_gota_agua" />

                        <TextView
                            android:id="@+id/txtEncanador"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:text="Encanador"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/icone_encanador" />
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/id_tipoLar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="17dp"
                android:text="Como é seu lar?"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/cardView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="115dp"
                android:layout_height="25dp"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/cor_dos_icones"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/id_tipoLar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="115dp"
                    android:layout_height="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/txtCasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Casa"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="115dp"
                android:layout_height="25dp"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/cor_dos_icones"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/id_tipoLar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="115dp"
                    android:layout_height="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/txtApartamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apartamento"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/label_quantidadeComodos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="74dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="72dp"
                android:layout_marginBottom="13dp"
                android:text="Quantos comodos existem na Redidência?"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/textQtdComodos"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView5" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQtdComodos"
                android:layout_width="235dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:padding="3dp"
                app:boxBackgroundColor="#D9D9D9"
                app:layout_constraintBottom_toTopOf="@+id/label_horario"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_quantidadeComodos">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idQtdComodos"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bordasnoinput"
                    android:elevation="3dp"
                    android:fontFamily="@font/lato"
                    android:hint="Comodos"
                    android:paddingLeft="15dp"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/label_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informe um horário:"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/textInputHorário"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textQtdComodos" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputHorário"
                android:layout_width="235dp"
                android:layout_height="60dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="19dp"
                android:elevation="10dp"
                android:padding="3dp"
                app:boxBackgroundColor="#D9D9D9"
                app:layout_constraintBottom_toTopOf="@+id/textInputNumeroCliente"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_horario">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idHorario"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bordasnoinput"
                    android:elevation="3dp"
                    android:fontFamily="@font/lato"
                    android:hint="Horário..."
                    android:paddingLeft="15dp"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputNumeroCliente"
                android:layout_width="235dp"
                android:layout_height="60dp"
                android:layout_marginBottom="64dp"
                android:elevation="10dp"
                android:padding="3dp"
                app:boxBackgroundColor="#D9D9D9"
                app:layout_constraintBottom_toTopOf="@+id/idAvancar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputHorário">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/idNumeroCliente"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/bordasnoinput"
                    android:elevation="3dp"
                    android:fontFamily="@font/lato"
                    android:hint="Número de telefone..."
                    android:paddingLeft="15dp"
                    android:textAlignment="textStart"
                    android:textSize="12sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/idAvancar"
                android:layout_width="128dp"
                android:layout_height="57dp"
                android:layout_marginStart="146dp"
                android:layout_marginEnd="137dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="#F2B807"
                android:onClick="SelecionarProf"
                android:text="Avançar"
                android:textColor="#f2f2f2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputNumeroCliente" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>