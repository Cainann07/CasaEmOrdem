<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="134dp"
        android:layout_height="146dp"
        android:layout_marginBottom="716dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/casa_em_ordem_logo_photoroom" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputCPF"
        android:layout_width="237dp"
        android:layout_height="78dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="424dp"
        android:elevation="10dp"
        android:padding="3dp"
        app:boxBackgroundColor="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idCPF"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bordasnoinput"
            android:elevation="3dp"
            android:fontFamily="@font/lato"
            android:hint="CPF..."
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputSenha_cadastro_cliente"
        android:layout_width="237dp"
        android:layout_height="78dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="272dp"
        android:elevation="10dp"
        android:padding="3dp"
        app:boxBackgroundColor="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idSenha_cadastro_cliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bordasnoinput"
            android:elevation="3dp"
            android:fontFamily="@font/lato"
            android:hint="Nome..."
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputNome"
        android:layout_width="237dp"
        android:layout_height="78dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="496dp"
        android:elevation="10dp"
        android:padding="3dp"
        app:boxBackgroundColor="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idNome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bordasnoinput"
            android:elevation="3dp"
            android:fontFamily="@font/lato"
            android:hint="Nome..."
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmail_Cadastro_cliente"
        android:layout_width="237dp"
        android:layout_height="78dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="348dp"
        android:elevation="10dp"
        android:padding="3dp"
        app:boxBackgroundColor="#D9D9D9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idEmail_Cadastro_cliente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bordasnoinput"
            android:elevation="3dp"
            android:fontFamily="@font/lato"
            android:hint="E-mail..."
            android:paddingLeft="15dp"
            android:textAlignment="textStart"
            android:textSize="12sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="266dp"
        android:layout_marginStart="168dp"
        android:layout_marginBottom="596dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="196dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fotodeperfil_generica2" />

        <ImageView
            android:id="@+id/id_icone_editar_foto"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|right"
            android:background="@drawable/shadow_circular"
            android:elevation="20dp"
            android:translationZ="4dp"
            app:srcCompat="@drawable/icone_editar2"
            tools:layout_editor_absoluteX="218dp"
            tools:layout_editor_absoluteY="249dp" />


    </FrameLayout>

    <TextView
        android:id="@+id/idCadastrarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="2"
        android:shadowDy="6"
        android:shadowRadius="3"
        android:text="Cadastrar Conta - Cliente"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/idBotaoCadastrar"
        android:layout_width="140dp"
        android:layout_height="49dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/shadow"
        android:backgroundTint="#F2B807"
        android:text="Cadastrar"
        android:textColor="#f2f2f2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>